{
    "name": "jiahao-blog",
    "version": "3.7.0",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "prettier --write .",
        "format:ci": "pnpm run format -- !.github/**",
        "lint": "astro check && eslint . && markdownlint .",
        "lint:fix": "astro check && eslint . --fix && markdownlint . --fix",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "playwright:open": "playwright test --ui",
        "coverage": "vitest run --coverage",
        "build": "astro build && pagefind",
        "preview": "pnpm run build && astro preview",
        "preview:host": "pnpm run build && astro preview --host",
        "dev": "astro dev",
        "dev:host": "astro dev --host",
        "prepare": "husky"
    },
    "dependencies": {
        "@astrojs/check": "^0.9.4",
        "@astrojs/mdx": "^4.3.0",
        "@astrojs/react": "^4.3.0",
        "@astrojs/rss": "^4.0.12",
        "@astrojs/sitemap": "^3.4.1",
        "@expressive-code/plugin-collapsible-sections": "^0.41.2",
        "@giscus/react": "^3.1.0",
        "@headlessui/react": "^2.2.4",
        "@microflash/rehype-figure": "^2.1.4",
        "@myriaddreamin/rehype-typst": "^0.6.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/hast": "^3.0.4",
        "@unocss/reset": "^66.3.2",
        "astro": "^5.10.1",
        "astro-expressive-code": "^0.41.2",
        "astro-robots-txt": "^1.0.0",
        "astro-seo": "^0.8.4",
        "astro-seo-schema": "^5.0.0",
        "dayjs": "^1.11.13",
        "giscus": "^1.6.0",
        "html-react-parser": "^5.2.5",
        "pagefind": "^1.3.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0",
        "rehype-abs-image": "^1.0.0",
        "rehype-parse": "^9.0.1",
        "rehype-rewrite": "^4.0.2",
        "rehype-stringify": "^10.0.1",
        "remark-github-blockquote-alert": "^1.3.1",
        "remark-math": "^6.0.0",
        "remark-parse": "^11.0.0",
        "remark-rehype": "^11.1.2",
        "remark-sectionize": "^2.1.0",
        "sanitize-html": "^2.17.0",
        "sass": "^1.89.2",
        "sharp": "^0.34.2",
        "typescript": "^5.8.3",
        "unified": "^11.0.5",
        "unocss": "^66.3.2",
        "unocss-preset-theme": "^0.14.1",
        "uuid": "^11.1.0",
        "vite": "^7.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/types": "^19.8.1",
        "@eslint/js": "^9.30.0",
        "@estruyf/github-actions-reporter": "^1.10.0",
        "@playwright/test": "^1.53.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/markdown-it": "^14.1.2",
        "@types/node": "^22.15.33",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/sanitize-html": "^2.16.0",
        "@unocss/eslint-config": "^66.3.2",
        "@vitest/coverage-v8": "^3.2.4",
        "devmoji": "^2.3.0",
        "eslint": "^9.30.0",
        "eslint-plugin-astro": "^1.3.1",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.2.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "markdownlint-cli": "^0.45.0",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-toml": "^2.0.5",
        "typescript-eslint": "8.35.0",
        "vitest": "^3.2.4",
        "vitest-mock-extended": "^3.1.0"
    },
    "packageManager": "pnpm@10.12.4",
    "pnpm": {
        "overrides": {
            "vitest>vite": "^7.0.0"
        }
    }
}
