---
import MobileNavigationBar from "components/organisms/MobileNavigationBar";
import NavigationBar from "components/organisms/NavigationBar";
import { DEFAULT_LANGUAGE } from "config";
import BaseLayout, { type Props } from "layouts/BaseLayout.astro";

const language = Astro.currentLocale ?? DEFAULT_LANGUAGE;
const currentURL = Astro.url.pathname;
---

<BaseLayout {...Astro.props}>
    <slot name="head" slot="head" />

    <aside slot="left-sidebar" un-hidden lg="block sticky top-0 h-screen p-lg">
        <NavigationBar {language} {currentURL} client:idle />
    </aside>

    <slot />

    <aside fixed bottom-0 w-full p-3 block lg="hidden">
        <MobileNavigationBar {language} {currentURL} client:load />
    </aside>
</BaseLayout>
